static const char VERSION[] = "Version du @@@DATE@@@";

void print_copyright(int enabled)
{
    static int printed = 0;
    if (!enabled || printed)
        return;

    fprintf(stderr, "%s\n%s\n%s\n", NAME, COPYRIGHT, VERSION);
    printed = 1;
}
